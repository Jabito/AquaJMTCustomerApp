<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_store_info">

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="15dp"
        android:text="Aqua Water Station Muntinlupa Branch"/>

    <TextView
        android:id="@+id/txt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#6a6a6a"
        android:textSize="12sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="7dp"
        android:layout_below="@id/txt_name"
        android:text="@string/sample_address"/>

    <TextView
        android:id="@+id/lbl_contact_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primary Contact No.: "
        android:textColor="#6a6a6a"
        android:textSize="12sp"
        android:layout_marginBottom="2dp"
        android:layout_below="@id/txt_address"/>

    <TextView
        android:id="@+id/txt_contact_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#6a6a6a"
        android:textSize="12sp"
        android:layout_alignBaseline="@id/lbl_contact_no"
        android:layout_toEndOf="@id/lbl_contact_no"
        android:text="(0916) 541-4338"/>

    <TextView
        android:id="@+id/lbl_other_contact_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Contact Nos: "
        android:textColor="#6a6a6a"
        android:textSize="12sp"
        android:layout_marginBottom="12dp"
        android:layout_below="@id/lbl_contact_no"/>

    <TextView
        android:id="@+id/txt_other_contact_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#6a6a6a"
        android:textSize="12sp"
        android:layout_alignBaseline="@id/lbl_other_contact_no"
        android:layout_toEndOf="@id/lbl_other_contact_no"
        android:text="(0916) 541-4338"/>

    <TextView
        android:id="@+id/txt_is_open_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginBottom="2dp"
        android:layout_below="@id/lbl_other_contact_no"
        android:text="Currently open"/>

    <TextView
        android:id="@+id/txt_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3b3b3b"
        android:textSize="12sp"
        android:layout_below="@id/txt_is_open_status"
        android:text="Open everyday from 9:00 A.M. to 9:00 P.M."/>

    <TextView
        android:id="@+id/txt_holidays_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3b3b3b"
        android:textSize="12sp"
        android:layout_below="@id/txt_schedule"
        android:text="Also open during holidays."/>

</merge>