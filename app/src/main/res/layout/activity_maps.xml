<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.mapua.aquajmt.customerapp.activities.MapsActivity" >

    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/btn_drawer_toggle"
            android:background="@android:color/transparent"
            android:foreground="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/ic_menu_black_s_white"
            android:layout_margin="13dp"
            android:scaleType="fitXY"
            android:padding="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <RelativeLayout
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_marginBottom="55dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <GridLayout
                android:clipToPadding="false"
                android:padding="25dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:background="@drawable/circular_button"
                    android:foreground="@drawable/ripple_oval"
                    android:src="@drawable/ic_map_black"
                    android:elevation="5dp"
                    android:padding="25dp"
                    android:layout_margin="10dp"
                    android:layout_height="50dp"
                    android:layout_width="50dp"/>

                <ImageButton
                    android:background="@drawable/circular_button"
                    android:foreground="@drawable/ripple_oval"
                    android:src="@drawable/ic_restore_black"
                    android:elevation="5dp"
                    android:padding="25dp"
                    android:layout_margin="10dp"
                    android:layout_height="50dp"
                    android:layout_width="50dp"/>

            </GridLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/left_drawer_pane"
        android:background="@android:color/white"
        android:layout_gravity="start"
        android:layout_width="220dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/aqua_logo_layout"
            android:background="@color/colorDrawer"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <TextView
                android:text="Aqua Logo"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <GridLayout
            android:orientation="vertical"
            android:layout_below="@id/aqua_logo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_notifications"
                android:text="Notifications"
                style="@style/DrawerButtonStyle" />

            <Button
                android:id="@+id/btn_user_orders"
                android:text="@string/txt_orders"
                style="@style/DrawerButtonStyle" />

            <Button
                android:id="@+id/btn_user_payment_history"
                android:text="@string/txt_payment_history"
                style="@style/DrawerButtonStyle" />

            <Button
                android:id="@+id/btn_favorites"
                android:text="Favorites"
                style="@style/DrawerButtonStyle" />

        </GridLayout>

        <GridLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/btn_settings"
                android:text="@string/txt_settings"
                style="@style/DrawerMinorButtonStyle" />

            <Button
                android:id="@+id/btn_logout"
                android:text="@string/txt_logout"
                style="@style/DrawerMinorButtonStyle" />

        </GridLayout>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>