<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:id="@+id/txt_day_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/txt_price"
        android:layout_alignParentStart="true"
        tools:text="Saturday at 16:55"/>

    <TextView
        android:id="@+id/txt_order_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_day_time"
        tools:text="Three slim containers (Swapped)"/>

    <TextView
        android:id="@id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:maxWidth="150dp"
        android:layout_marginStart="8dp"
        android:layout_alignBaseline="@id/txt_day_time"
        android:layout_alignParentEnd="true"
        tools:text="PHP 100.00"/>

</RelativeLayout>